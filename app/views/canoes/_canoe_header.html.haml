%section{ style: "background-size: cover; background-image: url('#{@canoe.cover_url}'); margin-top: -30px; margin-bottom: 30px;"}
  .container
    .jumbotron.jumbotron-transparent{ style: 'margin: 0' }
      %div.clearfix
        .pull-left
          = link_to canoe_home_path(@canoe) do
            = image_tag @canoe.logo_url, class: 'img-thumbnail', style: 'width: 125px; height: 125px; margin-right: 20px;'
        %h2{ style: 'margin-top: 0;' }
          = link_to @canoe.title, canoe_home_path(@canoe), { style: 'font-weight: bold; color:white; text-shadow: 1px 2px 0px black; text-decoration: none;'}
          %small
            - if can?(:update, @canoe)
              = link_to [:edit, @canoe] do
                %i.fa.fa-edit
            - if can?(:destory, @canoe)
              = link_to @canoe, method: :delete do
                %i.fa.fa-trash
        = simple_format @canoe.theme, style: 'font-size: 15px; color: white; text-shadow: 1px 1px 0px black; margin-left: 145px;'

      %div
        - if can?(:update, @canoe)
          %div{ style: 'margin-top: 20px;' }
            = form_for @canoe do |f|
              .form-group
                = f.text_area :board, class: 'form-control'
              = f.submit '저장하기', class: 'btn btn-default'
        - elsif @canoe.board.present?
          %div{ style: 'margin-top: 20px;' }
            = simple_format @canoe.board
