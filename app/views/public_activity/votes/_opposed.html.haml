- if activity.recipient.present? and activity.recipient.proposal.present?
  %li.media[activity](style='margin-top: 5px;')
    .media-left(style='font-size: 28px;')
      %span.fa-stack.fa-lg.text-danger(style='right: 5px;')
        %i.fa.fa-circle.fa-stack-2x
        %i.fa.fa-ban.fa-stack-1x.fa-inverse
    .media-body(style='vertical-align: middle')
      @#{activity.owner.nickname}님이 제안#{activity.recipient.proposal.sequential_id}을(를) 차단합니다.
      %span.text-muted
        %i.fa.fa-clock-o
        = date_f activity.created_at
